<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转码前的wav输入路径" />

    <EditText
        android:id="@+id/et_wav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/sdcard/seta/record/1432138970154.pcm" >
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转码后的mp3输出路径" />

    <EditText
        android:id="@+id/et_mp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/sdcard/z.mp3" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="convert"
        android:text="转码" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getVersion"
        android:text="获取LAME的版本号" />

</LinearLayout>
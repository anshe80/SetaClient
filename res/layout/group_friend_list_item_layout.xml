<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ededed" >

    <ImageView
        android:id="@+id/group_friend_item_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/friend_offline" />

    <TextView
        android:id="@+id/group_friend_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="我很闲"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/group_friend_item_friendname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/group_friend_item_desc"
        android:layout_toRightOf="@id/group_friend_item_image"
        android:ellipsize="end"
        android:gravity="left"
        android:padding="4dp"
        android:singleLine="true"
        android:text="好友昵称"
        android:textColor="#000"
        android:textSize="20sp" />

</RelativeLayout>